<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-10">
    <br>
    <div class="row">
      <div class="col-xs-12">
        <center>
          <h1>Edit user form</h1>
        </center>
      </div>
    </div>
    <br>
    <br>
    <form name="formUserEdit" class="form-edit" role="edit">
      <div class="form-group">
        <div class="row">

          <div class="col-xs-6">
            <input type="text" id="email" name="email" class="form-control" placeholder="Insert e-mail" ng-model="user.email"
                   jfb-validate-not-empty jfb-validate-is-email jfb-validate-max-characters="50" jfb-validate-content="{{user.email}}"
                   style="margin-top: 5px; margin-bottom: 5px;">
          </div>

          <div class="col-xs-6">
            <input type="text" id="username" name="username" class="form-control " placeholder="Insert user name" ng-model="user.username"
                   jfb-validate-not-empty jfb-validate-numbers-letters jfb-validate-max-characters="30" jfb-validate-content="{{user.username}}"
                   style="margin-top: 5px; margin-bottom: 5px;">
          </div>
        </div>
        <br>
        <br>
        <div class="row">
          <div class="col-xs-12">
            <center>
              <button class="btn btn-default normal-button" type="button" ng-click='users_update()' ng-href='#here'>Update</button>
            </center>
          </div>
        </div>
      </div>
    </form>
  </div>
  <div class="col-xs-1"></div>
</div>
<br><br><br>