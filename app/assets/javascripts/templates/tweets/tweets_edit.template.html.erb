<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <br>
    <div class="row">
      <div class="col-xs-12">
        <center>
          <h1>Tweet edit form</h1>
        </center>
      </div>
    </div>
    <br>
    <br>
    <form name="formNewTweet" class="form-register" role="register">
      <div class="form-group">
        <div class="row" ng-if="tweet.type == 'TextTweet'">
          <div class="col-md-12"  >
            <textarea class="form-control" id="tweettext" name="tweettext" placeholder="Insert the tweet text. (max. 140 chars)" ng-model="$parent.tweet.text"
                      jfb-validate-not-empty jfb-validate-max-characters="140" jfb-validate-content="{{$parent.tweet.text}}">
            </textarea>
          </div>
        </div>
        <div class="row" ng-if="tweet.type == 'ImageTweet'">
          <div class="col-md-12">
            <input type="text" id="url" name="url" class="form-control" placeholder="Insert an url for the image" ng-model="$parent.tweet.url"
                   jfb-validate-not-empty jfb-validate-max-characters="200" jfb-validate-content="{{$parent.tweet.url}}">
          </div>
          <div class="col-md-12">
            <textarea class="form-control" id="tweettext" name="tweettext" placeholder="Insert the a text to be showed next to the image. (max. 140 chars)" ng_model="$parent.tweet.text"
                      jfb-validate-max-characters="140" jfb-validate-content="{{$parent.tweet.text}}">
            </textarea>
          </div>
        </div>
        <!-- Audio tweet:
        <div class="row" ng-if="tweet.type == 'AudioTweet'">
          <div class="col-md-12">
            <input type="text" id="url" name="url" class="form-control" placeholder="Insert an url for the audio" ng-model="$parent.tweet.url"
                   jfb-validate-not-empty jfb-validate-max-characters="200" jfb-validate-content="{{$parent.tweet.url}}">
          </div>
          <div class="col-md-12">
            <textarea class="form-control" id="tweettext" name="tweettext" placeholder="Insert the a text to be showed next to the audio. (max. 140 chars)" ng_model="$parent.tweet.text"
                      jfb-validate-max-characters="140" jfb-validate-content="{{$parent.tweet.text}}">
            </textarea>
          </div>
        </div>
        -->
        <br>
        <br>
        <div class="row">
          <div class="col-xs-12">
            <center>
              <button class="btn btn-default normal-button" type="button" ng-click='tweets_update()' ng-href='#here'>Tweet!</button>
            </center>
          </div>
        </div>

      </div>
    </form>
  </div>
  <div class="col-xs-1"></div>
</div>
