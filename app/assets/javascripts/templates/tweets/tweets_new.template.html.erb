<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <br>
    <div class="row">
      <div class="col-md-12">
        <center>
          <h1>New tweet form</h1>
        </center>
      </div>
    </div>
    <br>
    <br>
    <form name="formNewTweet" class="form-register" role="register">
      <div class="form-group">
        <div class="row">

          <div class="col-md-6">
            <label for="contentType">Select a kind of tweet:</label>
            <select id="contentType" name="contentType" class="form-control" ng-model="contentType" ng-init="contentType = 'text'"  jfb-validate-all-allowed="">
              <option id="text" value="text" selected>Text Tweet</option>
              <option id="image" value="image" >Image Tweet</option>
              <!-- Audio tweet: -->
              <!-- <option value="audio">Audio Tweet</option> -->
            </select>
          </div>

          <div class="col-md-6">
            <label for="author">Select an author for the tweet:</label>
            <select id="author" name="author" class="form-control" ng-model="author" ng-init="author = '1'" jfb-validate-all-allowed="">
              <option ng-repeat="user in users" value="{{user.id}}" ng-selected="$index==0">{{user.username}}</option>
            </select>
          </div>

        </div>
        <div class="row" ng-if="contentType == 'text'">
          <div class="col-md-12"  >
            <textarea class="form-control" id="tweettext" name="tweettext" placeholder="Insert the tweet text. (max. 140 chars)" ng-model="$parent.tweettext"
                      jfb-validate-not-empty jfb-validate-max-characters="140" jfb-validate-content="{{$parent.tweettext}}">
            </textarea>
          </div>
        </div>
        <div class="row" ng-if="contentType == 'image'">
          <div class="col-md-12">
            <input type="text" id="url" name="url" class="form-control" placeholder="Insert an url for the image" ng-model="$parent.url"
                   jfb-validate-not-empty jfb-validate-max-characters="200" jfb-validate-content="{{$parent.url}}">
          </div>
          <div class="col-md-12">
            <textarea class="form-control" id="tweettext" name="tweettext" placeholder="Insert the a text to be showed next to the image. (max. 140 chars)" ng_model="$parent.tweettext"
                      jfb-validate-max-characters="140" jfb-validate-content="{{$parent.tweettext}}">
            </textarea>
          </div>
        </div>
        <!-- Audio tweet:
        <div class="row" ng-if="contentType == 'audio'">
          <div class="col-md-12">
            <input type="text" id="url" name="url" class="form-control" placeholder="Insert an url for the audio" ng-model="$parent.url"
                   jfb-validate-not-empty jfb-validate-max-characters="200" jfb-validate-content="{{$parent.url}}">
          </div>
          <div class="col-md-12">
            <textarea class="form-control" id="tweettext" name="tweettext" placeholder="Insert the a text to be showed next to the audio. (max. 140 chars)" ng_model="$parent.tweettext"
                      jfb-validate-max-characters="140" jfb-validate-content="{{$parent.tweettext}}">
            </textarea>
          </div>
        </div>
        -->
        <br>
        <br>
        <div class="row">
          <div class="col-md-12">
            <center>
              <button class="btn btn-default normal-button" type="button" ng-click='tweets_create()' ng-href='#here'>Tweet!</button>
            </center>
          </div>
        </div>

      </div>
    </form>
  </div>
  <div class="col-md-1"></div>
</div>
